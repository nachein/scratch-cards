{
  "name": "pixi-es6-scratch-cards",
  "version": "0.9.0",
  "private": true,
  "description": "Small scratch cards game made with es6-pixi-bolierplate (https://github.com/Nazariglez/es6-pixi-bolierplate)",
  "main": "./build/game.js",
  "author": "Juan Ignacio Casal <ignaciocasal@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run dev",
    "watch": "npm run dev | npm run local",
    "dev": "webpack --config webpack.config.js --progress --inline --colors --watch",
    "build": "NODE_ENV=production webpack --config webpack.config.js --progress --colors -p",
    "local": "./node_modules/.bin/http-server -a localhost -p 8000 -c-1"
  },
  "devDependencies": {
    "babel-core": "^6.3.17",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-runtime": "^6.3.13",
    "brfs": "^1.4.1",
    "json-loader": "^0.5.4",
    "node-static": "^0.7.9",
    "pixi-animationloop": "^1.0.7",
    "pixi.js": "^3.0.8",
    "transform-loader": "^0.2.3"
  },
  "dependencies": {
    "http-server": "^0.9.0"
  }
}
